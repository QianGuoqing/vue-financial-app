button-default($size=7px, $color=#fff, $bgcolor=#f04752, $padding=0 5px, $radius=3px)
  padding: $padding;
  background-color: $bgcolor;
  border-radius: $radius;
  border: 1px solid $bgcolor;
  font-size: $size;
  color: $color;
  text-align: center;
  line-height: 1;
  display: inline-block;

panel-default($bgcolor=#fff, $padding=0, $margin=10px 0, $height=56px, $txtPadding=0 16px, $color=#333, $fontSize=16px)
  background-color $bgcolor
  padding $padding
  margin $margin
  h4
    height $height
    line-height $height
    padding $padding
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    color $color
    font-size $fontSize
